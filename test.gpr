with "aunit.gpr";
with "adaid.gpr";
project Test is
	for Languages use ("Ada");
	for Object_Dir use "obj";
	for Source_Dirs use ("test");
	for Main use ("test.adb");
	for Exec_Dir use "bin";
	
	package Builder is
		for Default_Switches("Ada") use ("-g", "-gnat12", "-gnatQ", "-I./include");
	end Builder;
	
	
	package Linker is
		for Default_Switches("Ada") use ("-g");
	end Linker;
	
	package Compiler is
		for Default_Switches("Ada") use ("-Llib", "-ladaid", "-gnatf", "-g", "-I./include");
	end Compiler;
	
	package Binder is
		for Default_Switches("Ada") use ("-E", "-static");
	end Binder;
end Test;
